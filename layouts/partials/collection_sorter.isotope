<section class="filters sticky top-0 mx-auto flex flex-col mb-4 z-40">
    <div class="ui-group flex flex-row flex-wrap border-t border-l-0 border-r-0 border-b border-solid border-gray-200 py-4">
      <div class="button-group js-radio-button-group">
        {{range $.Site.Data.categories}}
        {{range sort .categories "value" "asc"}}
        <button class="button" data-filter=".{{. | urlize}}">{{.}}</button>
        {{end}}
        {{end}}
      </div>
    </div>
</section>